

<div class="d-flex align-items-start">
  <div class="cards-grid p-3 flex-grow-1">
    <% @ceremonies.each do |ceremony| %>
      <%= render 'card', ceremony: ceremony %>
    <% end %>
  </div>
  <div
    id="map"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      <img src="http://placehold.it/600x1000?text=Map" alt="">
  </div>
</div>

